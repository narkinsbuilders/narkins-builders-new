# Environment Variables Template
# Copy this file to .env.local and update with actual values

# =============================================================================
# DATABASE CONFIGURATION (Hostinger MySQL)
# =============================================================================
# Contact team lead for actual database credentials
DB_HOST=srv1567.hstgr.io
DB_USER=your-database-username
DB_PASSWORD=your-database-password
DB_NAME=your-database-name
DB_PORT=3306

# =============================================================================
# SITE CONFIGURATION
# =============================================================================
NEXT_PUBLIC_SITE_URL=https://www.narkinsbuilders.com

# =============================================================================
# COMMENT SYSTEM SETTINGS
# =============================================================================
AUTO_APPROVE_COMMENTS=true
AUTO_APPROVE_THRESHOLD=0.8

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Generate JWT secret with: openssl rand -base64 32
JWT_SECRET=your-jwt-secret-key-here

# reCAPTCHA keys from Google Console
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your-recaptcha-site-key
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_COMMENTS=5
RATE_LIMIT_LIKES=20
RATE_LIMIT_WINDOW=3600

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
NODE_ENV=development

# =============================================================================
# GOOGLE SHEETS INTEGRATION
# =============================================================================
GOOGLE_SERVICE_ACCOUNT_EMAIL=your-service-account-email
GOOGLE_SERVICE_ACCOUNT_PRIVATE_KEY=your-private-key
GOOGLE_SHEET_ID=your-sheet-id

# =============================================================================
# TINACMS CONFIGURATION
# =============================================================================
NEXT_PUBLIC_TINA_CLIENT_ID=your-tina-client-id
TINA_TOKEN=your-tina-token
TINA_SEARCH_TOKEN=your-tina-search-token